<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="495dp"
            android:layout_height="870dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baloons"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/highScoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginStart="151dp"
            android:layout_marginTop="345dp"
            android:layout_marginEnd="285dp"
            android:layout_marginBottom="675dp"
            android:fontFamily="@font/acme"
            android:text="@string/Hscore"
            android:textSize="40sp"
            android:textColor="#FBFBFB"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/resetButton"
            android:layout_width="160dp"
            android:layout_height="69dp"
            android:layout_below="@id/highScoreText"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="126dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="127dp"
            android:layout_marginBottom="249dp"
            android:backgroundTint="@android:color/holo_orange_light"
            android:fontFamily="@font/acme"
            android:text="@string/reset_high_score"
            android:textSize="20sp"
            android:textColor="#100F0F"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/highScoreText"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>
